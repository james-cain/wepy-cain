<style lang="less">
.evaluation-panel {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}

.evaluation-panel-top {
  height: 100px;
  background: #fff;
}

.evaluation-panel-top-title {
  width: 200px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  font-size: 16px;
  margin: 50px auto 20px auto;
  font-weight: bold;
}

.start-area {
  width: 200px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  margin: 0 auto;
  overflow: hidden;
}

.start-area image {
  margin: 0;
  padding: 0;
  display: inline-block;
  float: left;
  width: 30px;
  height: 30px;
  background: url("http://mspshow.szcomtop.com/msp-charge/include/miniapps/images/c_grade_star_gray@2x.png") center center no-repeat;
  background-size: 30px 30px;
  margin-right: 11px;
}

.start-area image.selected {
  background: url("http://mspshow.szcomtop.com/msp-charge/include/miniapps/images/c_grade_star_yellow@2x.png") center center no-repeat;
  background-size: 30px 30px;
}

.start-area image:last-child {
  margin: 0;
}

.evaluation-text {
  background: #f1f5f8;
  height: 200px;
  margin-bottom: 45px;
}

.evaluation-text textarea {
  border: 0;
  width: 96%;
  height: 100%;
  line-height: 25px;
  color: #666;
  outline: none;
  padding: 10px 2%;
  font-size: 15px;
  background: #f1f5f8;
}

.evaluation-submit {
  position: fixed;
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  font-size: 15px;
  background: #2fb9c3;
  color: #fff;
  left: 0;
  bottom: 0;
  z-index: 10;
}

.evaluation-phase {
  width: 90%;
  padding: 10px 5%;
  overflow: hidden;
}

.evaluation-phase .evaluation-item view {
  min-width: 60px;
  max-width: 120px;
  overflow: hidden;
  padding: 0 5px;
  display: inline-block;
  height: 28px;
  background: #f5f5f5;
  float: left;
  line-height: 28px;
  text-align: center;
  margin-right: 10px;
  margin-bottom: 10px;
  border-radius: 3px;
  border: 1px solid #e0e0e0;
  font-size: 14px;
}

.evaluation-phase .evaluation-item view:nth-child(4n) {
  float: left;
}

.evaluation-phase .evaluation-item view.selected {
  background: #d5f1f3;
  color: #2fb9c3;
  border: 1px solid #2fb9c3;
}

</style>
<template>
  <view class="container">
    <view class="evaluation-panel">
      <view class="evaluation-panel-top">
        <view class="evaluation-panel-top-title">请您为本次充电服务评分</view>
        <view class="start-area">
          <image class="{{star[1] ? 'selected' : ''}}" @tap="lightStar(1)"/>
          <image class="{{star[2] ? 'selected' : ''}}" @tap="lightStar(2)"/>
          <image class="{{star[3] ? 'selected' : ''}}" @tap="lightStar(3)"/>
          <image class="{{star[4] ? 'selected' : ''}}" @tap="lightStar(4)"/>
          <image class="{{star[5] ? 'selected' : ''}}" @tap="lightStar(5)"/>
        </view>
      </view>
      <view class="evaluation-phase">
        <view class="evaluation-list" wx:for="{{labelList}}" wx:for-item="label" wx:key="score">
          <view class="evaluation-item" wx:for="{{label.items}}" wx:for-item="lableItem" wx:key="labelCode">
            <view wx:if="{{labelStar[label.score]}}" class="{{'tag_' + label.score}} {{selectedLabel[lableItem.labelCode] ? 'selected' : ''}}" data-labelCode="{{lableItem.labelCode}}" @tap="selectedLabel({{lableItem.labelCode}})">{{lableItem.labelName}}</view>
          </view>
        </view>
      </view>
      <view class="evaluation-text">
        <textarea placeholder="请输入本次充电的评价,谢谢。" @input="inputValue"></textarea>
      </view>
      <view class="evaluation-submit" @tap="submitEvaluation">提交评论</view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import CTP from '../utils/ajax'

  export default class Evaluation extends wepy.page {
    config = {
      navigationBarTitleText: '站点评价'
    }

    components = {

    }

    data = {
      star: [
        false,
        false,
        false,
        false,
        false,
        false
      ],
      currentStar: 0,
      labelList: [],
      labelStar: [
        false,
        false,
        false,
        false,
        false,
        false
      ],
      selectedLabel: {},
      score: 0,
      comment: '',
      labels: [],
      chargedPayment: {}
    }

    computed = {

    }

    methods = {
      inputValue (e) {
        this.comment = e.detail.value
        this.$apply()
      },
      lightStar (id, e) {
        let _id = parseInt(id, 10)
        if (this.currentStar === _id) {
          console.log('取消评分')
          this.star.forEach((e, index, arr) => {
            arr[index] = false
          })
          this.labelStar.forEach((e, index, arr) => {
            arr[index] = false
          })
          this.currentStar = 0
          this.score = 0
        } else {
          console.log('点亮评分')
          this.star.forEach((e, index, arr) => {
            if (index <= _id) {
              arr[index] = true
            } else {
              arr[index] = false
            }
          })
          this.labelStar.forEach((e, index, arr) => {
            if (index === _id) {
              arr[index] = true
            } else {
              arr[index] = false
            }
          })
          this.currentStar = _id
          this.score = _id
        }
        for (let key in this.selectedLabel) {
          this.selectedLabel[key] = false
        }
        this.labels.length = 0
        this.$apply()
      },
      selectedLabel (labelCode, e) {
        console.log('当前选中的labelcode:' + labelCode)
        this.selectedLabel[labelCode] = !this.selectedLabel[labelCode]
        if (this.selectedLabel[labelCode]) {
          this.labels.push(labelCode)
        } else {
          this.labels.splice(this.labels.indexOf(labelCode), 1)
        }

        console.log(this.labels)
        this.$apply()
      },
      submitEvaluation (e) {
        let that = this
        console.log('点击了评论提交')
        if (that.score > 0) {
          that.submitEva()
        } else {
          wx.showToast({
            title: '请评分！',
            icon: 'none'
          })
        }
      }
    }

    events = {

    }

    submitEva() {
      let that = this
      let labelsbak = []
      labelsbak = this.labels.join(',')
      let paramsGetMyOrder = {
        userCode: that.session.user.userId,
        orderCode: that.chargedPayment.orderCode,
        siteCode: that.chargedPayment.siteCode,
        score: that.score,
        comment: that.comment,
        labels: labelsbak,

        nonce: 'abc',
        v: '1.0',
        format: 'json',
        method: 'station.submitscore',
        locale: 'zh_CN',
        appKey: that.session.appKey,
        sessionId: that.session.sessionId,
        timestamp: new Date().getTime()
      }
      CTP().Ajax({
        params: paramsGetMyOrder,
        url: '/msp-charge/router',
        success: function (e) {
          console.log('评论确定：')
          console.log(e)
          if (e.data.state === 0) {
            wx.showToast({
              title: '评论成功',
              icon: 'none',
              duration: 2000
            })
            wx.navigateBack()
          } else {
            wx.showToast({
              title: e.data.message,
              icon: 'none',
              duration: 2000
            })
          }
        },
        fail: function (e) {
          console.log(e)
        }
      })
    }

    getOrderDetails (chargingOrderCode) {
      let that = this
      let params = {
        orderCode: chargingOrderCode,

        nonce: 'abc',
        v: '1.0',
        format: 'json',
        method: 'order.info',
        locale: 'zh_CN',
        appKey: that.session.appKey,
        sessionId: that.session.sessionId,
        timestamp: new Date().getTime()
      }
      CTP().Ajax({
        params: params,
        url: '/msp-charge/router',
        success: function (e) {
          console.log('评价中获取充电信息：')
          console.log(e)
          let data = e.data
          wx.setStorageSync('chargedPayment', JSON.stringify(data.data))
          that.chargedPayment = data.data
          that.$apply()
        }
      })
    }

    getStationTag() {
      let that = this
      let tagParams = {
        userCode: that.session.user.userId,

        nonce: 'abc',
        v: '1.0',
        format: 'json',
        method: 'station.scorelable',
        locale: 'zh_CN',
        appKey: that.session.appKey,
        sessionId: that.session.sessionId,
        timestamp: new Date().getTime()
      }
      CTP().Ajax({
        params: tagParams,
        url: '/msp-charge/router',
        type: 'GET',
        success: function (e) {
          console.log('获取标签：')
          console.log(e)
          let data = e.data.data
          that.labelList = data
          that.$apply()
        }
      })
    }

    onShow () {
      // let chargingOrderCode = wx.getStorageSync('chargingOrderCode')
      // let chargedPayment = JSON.parse(wx.getStorageSync('chargedPayment'))
      // if (chargedPayment === '' || chargedPayment === undefined) {
      //   this.getOrderDetails(chargingOrderCode)
      // } else {
      //   this.chargedPayment = chargedPayment
      // }
      // console.log('')
      // this.getStationTag()
      // this.$apply()
    }

    onLoad () {
      let se = CTP().session
      this.session = se === '' || se === null ? '' : JSON.parse(se)
      let chargingOrderCode = wx.getStorageSync('chargingOrderCode')
      // let chargedPayment = JSON.parse(wx.getStorageSync('chargedPayment'))
      // if (chargedPayment === '' || chargedPayment === undefined) {
      this.getOrderDetails(chargingOrderCode)
      // } else {
      //   this.chargedPayment = chargedPayment
      // }
      console.log('')
      this.getStationTag()
      this.$apply()
    }

    onUnload () {
      this.star = [
        false,
        false,
        false,
        false,
        false,
        false
      ]
      this.currentStar = 0
      this.labelList = []
      this.labelStar = [
        false,
        false,
        false,
        false,
        false,
        false
      ]
      for (let key in this.selectedLabel) {
        this.selectedLabel[key] = false
      }
      this.score = 0
      this.comment = ''
      this.labels = []
      this.$apply()
    }
  }
</script>
